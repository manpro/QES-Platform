{
  "name": "qes-platform-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for QES Platform",
  "private": true,
  "scripts": {
    "test": "npm run test:api && npm run test:ui",
    "test:api": "pytest api/ -v",
    "test:ui": "cypress run",
    "test:ui:open": "cypress open",
    "test:load": "k6 run load/performance-test.js",
    "test:security": "pytest security/ -v",
    "test:providers": "pytest providers/ -v",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "cypress:verify": "cypress verify",
    "lint": "eslint cypress/",
    "format": "prettier --write cypress/"
  },
  "devDependencies": {
    "cypress": "^13.0.0",
    "@cypress/grep": "^4.0.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-wait-until": "^2.0.1",
    "eslint": "^8.40.0",
    "eslint-plugin-cypress": "^2.13.0",
    "prettier": "^2.8.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "faker": "^6.6.6"
  },
  "keywords": [
    "e2e",
    "testing",
    "cypress",
    "qes",
    "digital-signatures"
  ],
  "author": "QES Platform Team",
  "license": "MIT"
}